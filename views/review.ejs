            <label>방명록</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="review"></textarea>
            
          </div>
          <button type="submit" class="btn btn-outline-secondary">Submit</button>
        </form>
      </div>
      
